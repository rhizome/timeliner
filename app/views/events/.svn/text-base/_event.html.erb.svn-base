<%= content_tag_for :li, event, class: "#{cycle('even','odd')}" do %>
  <%= content_tag :p, class: 'date' do %>
    <%= event.start_date.strftime("%b %d, %Y") %>
    <% unless event.one_day? %>
      - <%= event.end_date.strftime("%b %d, %Y") %>
    <% end %>
  <% end %>
  <%= content_tag :p, link_to(event.name, event), class: 'name' %>
  <%= content_tag :p, truncate(event.description), class: 'desc' %>
  <%= link_to "Edit", edit_event_path(event) %>
<% end %>