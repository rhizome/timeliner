@import 'bourbon';
@import 'reset';
// @import 'timeline';

a { text-decoration: none; }

body {
  font-family: $helvetica;
  font-size: 15px;
  h1 {
    font-size: 2em;
    margin: 0.5em 0;
  }
  h2 {
    font-size: 1.25em;
    margin: 0.25em 0;
  }
  #content {
    width: 700px;
    height: 100%;
    padding: 1em;
    margin: 0 auto;
    border: 1px solid black;
  }
}
form {
  background-color: #ccc;
  padding: 1em;
  h3 { 
    margin-bottom: 1em; 
    margin-left: 3em;
  }
  .field {
    display: block;
    clear: left;
    label {
      line-height: 1.5em;
      margin-right: 0.25em;
      float: left;
      text-align: right;
      width: 10em;
    }
  }
  .submit {
    text-align: center;
    margin-top: 1em; 
    input {
      @include button;
    }
  }
}
div#flash {
  p {
    padding: 0.5em 1em;
    border-radius: 5px;
    a.close_button {
      float: right;
      font-weight: bold;
      text-shadow: 1px 1px 3px #ccc;
    }
  }
  p.notice {
    background-color: desaturate(lighten(green,40%),50%);
    border: 1px solid green;
  }
  p.alert {
    background-color: lighten(red, 30%);
    border: 1px solid red;
  }
}
ul.events, ul.timelines {
  margin: 1em 0;
  li {
    padding: 0.25em 0.5em;
    &.even {
      background-color: #e0e0e0;
    }
    &.odd {
      background-color: #eee;
    }
  }
  p {
    display: inline-block;
    &.date { width: 13em; }
    &.name { width: 10em; }
    &.desc { width: 20em; }
  }
}
div.actions {
  margin: 1em 0;
  a {
    @include button(simple, #ccc);
  }
}
div#error_explanation {
  margin-bottom: 1em;
  background-color: #eee;
  padding: 0.5em;
  h2 {
    font-size: 1em;
  }

}
div.timelines {
  margin-top: 1em;
  padding: 0.5em;
  border: 1px solid gray;
}